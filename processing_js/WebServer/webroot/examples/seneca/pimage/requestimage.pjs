PImage bigImage;
 
void setup() {
  frameRate(1);
  bigImage = requestImage("ETapple.jpg");
  PFont font;
  font = loadFont("Arial"); 
  textFont(font, 24);
  fill(203, 21, 10);
  text("Loading picture...", 500,300);
}
 
void draw() {
  if (bigImage.width == 0) {
    // Image is not yet loaded
  } else if (bigImage.width == -1) {
    // This means an error occurred during image loading
  } else {
    // Image is ready to go, draw it
    image(bigImage, 0, 0);
  }
}